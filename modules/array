${ARRAY_BASHLIB:-false} || {
    ARRAY_BASHLIB=:

    declare IFS_="$IFS"

    # get array_fld: $1=name_of_array $2=FS $3=key $4=field_nr:
    a_fld(){
        local -n a=$1
        local -i ai=$4
        for o in "${a[@]}"; do
            IFS=$2
            read -ra f<<<"$o"
            [[ "${f[0]}" = "$3" ]] && echo "${f[ai-1]}"
        done
        IFS="$IFS_"
    }
}
