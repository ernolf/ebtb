${TODAY_BASHLIB:-false} || {
    TODAY_BASHLIB=:

    # when
    # today 00:00 in unixtime
    declare -i today=$(date -ud 'today 00:00' +%s)

    # from unix to utc day
    ut2udF(){
        date -ud @$1 +%F
    }

    date2unix0hr(){
        date -ud "$1 00:00" +%s
    }

    now(){
        date +%s
    }
}
