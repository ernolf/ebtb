${APP_UPDATE_BASHLIB:-false} && return
APP_UPDATE_BASHLIB=:

. <(lrequire binaries)
. <(lrequire nc/nextcloud)

query_updates(){
    occ app:update -n --no-warnings --allow-unstable --showonly --all | ${BINARIES[sed]} -e 's/ new version available: /#/' > $1
}

# do_update_ $1=app-id or --all, $2= --allow-unstable
do_update_(){
    occ app:update --no-interaction --no-warnings $2 $1
}
