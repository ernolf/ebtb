${PDIFF_BASHLIB:-false} || {
    PDIFF_BASHLIB=:

    . <(lrequire dpkg)
    . <(lrequire php/extensions)

    # returns a list with vals unique to $1 - # x1=minimum packages to be installed, x2=sapis and packages required by cli and thus installed
    packages_diff(){
        inst(){
            local v x
            v="$1"
            shift
            (   dpkg -l | awk '/^[hiu]i.*php'$v'/{print $2}' | sed "s/$v//"
                for x in $@; do
                    case $x in
                        libapache2-mod-php) echo $x
                                            ;;
                                     embed) echo libphp-$x
                                            ;;
                                         *) echo php-$x
                    esac
                done
            ) | sort -u
        }

        local pkg pvo pvn sapi pkgmod
        local -a eia x1 x2
        local -i i
        pvo="$1" pvn="$2" sapi="$3"
# TODO 0 -->
#        x1=(apcu bcmath bz2 curl gd gmp igbinary intl mbstring redis xml zip)
# TODO <-- 0
        x1=(apcu bcmath bz2 curl gd gmp igbinary intl mbstring xml zip)
        x2=(libapache2-mod-php fpm cli cgi embed phpdbg common json opcache readline)
        if (( ${#EXTS_ADMIN[@]} )); then
            for i in $(eval echo \${!C4EIBY4_${pvo//./}[@]}); do
                pkgmod="$(eval echo \"\${C4EIBY4_${pvo//./}[i]}\")"
                pkg=${pkgmod%:*}
                [[ " $pkg" =~ " php$pvo-" ]] && eia+=("${pkg#*-}")
            done
        fi
        for pkg in $(comm -23 <(inst $pvo ${x1[@]} ${eia[@]}) <(inst $pvn ${x2[@]}) | sed "s/php/php$2/"); do
            if echo "$pkg" | grep -Eqsvw "^$phpvregex$"; then
                apt_exist "$pkg" &>/dev/null && echo $pkg
            fi
        done
    }
}
