${TEMPFILE_BASHLIB:-_} && return
TEMPFILE_BASHLIB=:

. <(lrequire binaries)

# standard for root:
: "${TMPDIR:=/tmp}"
[[ "$TMPDIR" == '/' || ! -d "$TMPDIR" ]] && TMPDIR='/tmp'
[ -d "$TMPDIR" ] || TMPDIR='/temp'

# unprivileged users need their own writable tmp dir:
if (( $(${X[id]} -u) )); then
    TMPDIR="${TMPDIR%/}"
    if (( $(${X[gawk]} -F/ '{print NF-1}' <<< "$TMPDIR") == 1 )) && [ -w "$TMPDIR" ]; then
        TMPDIR="$TMPDIR/user-$(${X[id]} -u)"
    elif [ ! -w "$TMPDIR" ]; then
        TMPDIR="$(${X[gawk]} -F/ '{print "/"$2}' <<< "$TMPDIR")/user-$(${X[id]} -u)"
    fi
    [ -d "$TMPDIR" ] || q0 ${X[mkdir]} -m 755 "$TMPDIR"
fi
declare ttf
ttf="$(${X[mktemp]} -p "$TMPDIR")"
if [[ -n "$ttf" && -f "$ttf" ]]; then
    ${X[rm]} -f -- "$ttf"
else
    echo -e "\e[31mERROR: TMPDIR '$TMPDIR' is not writable by user '$(${X[id]} -un)'\e[0m" >&2
    [ -t 0 ] || exit 1
fi
unset ttf

# tempfile creation $1=u (--dry-run)
tf(){
    local arg t u='' mode=''
    for arg in $@; do
        case $arg in
            u)  u=u ;;
      666|777)  mode=$arg
        esac
    done
    t="$(${X[mktemp]} -p $TMPDIR -${u}t ${bm}$$_XXXXXXXXXXXX)"
# TODO 0 -->
#    t="$(${X[mktemp]} -p $TMPDIR -${u}t ${bm:-$$}_XXXXXXXXXXXX)"
# TODO <-- 0
    if [ -z "$u" ]; then
        if [ -n "$mode" ]; then
            ${X[chmod]} $mode "$t"
        fi
    fi
    echo "$t"
}
