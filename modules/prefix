${PREFIX_BASHLIB:-_} && return
PREFIX_BASHLIB=:

. <(lrequire ansi)

# Prefix
pf(){
    printf ' - '
}

# Warning / Exclamation
# ⚠️ = either '\u26A0' or '\xE2\x9A\xA0'
xpf(){
    R; printf '\u26A0'$(N):
}

# Information
ipf(){
    printf "I:"
}

# Question
qpf(){
    printf 'Q: '
}
