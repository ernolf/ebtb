${EXIT_BASHLIB:-_} && return
EXIT_BASHLIB=:

. <(lrequire binaries)
. <(lrequire basics)
. <(lrequire ansi)
. <(lrequire debug)

exit0(){
    G; echo "exiting script."
    N; echo "generous? feedback? questions? run: '$me --contribute'"
    N; exit 0
}

exit1(){
    R; echo "exitingâ€¦"
    N; exit 1
}

# define a trap to clean up the temporary file
exit_trap(){
    [ -f "$spinner_pid_file" ] && kill_spinner
    ${local_server:-_} && ls_ stop
#    nonullglob "$TMPDIR/${bm}$$_*" && (${X[rm]} -f $TMPDIR/${bm}$$_*) 2>/dev/null
#    nonullglob "$TMPDIR/${bm:-$$}_*" && (${X[rm]} -f $TMPDIR/${bm:-$$}_*) 2>/dev/null
    nonullglob "$TMPDIR/${bm}$$_*" && q2 ${X[rm]} -f $TMPDIR/${bm}$$_*
    nonullglob "$TMPDIR/${bm:-$$}_*" && q2 ${X[rm]} -f $TMPDIR/${bm:-$$}_*
    ansi_reset
}

cleanup(){
    local garbage
    for garbage in "$@"; do
        [ -d "$garbage" ] && q2 ${X[rm]} -fr "$garbage"
        [ -f "$garbage" ] && q2 ${X[rm]} -f "$garbage"
    done
}

interrupted(){
    if [ -z "$bm" ]; then
        return 0
    else
        te1; Yi; echo "TRAP: interrupted by sig$1"
        if [ -f "$spinner_pid_file" ]; then
            te1; Yi; echo "TRAP: - spinner killed"
        fi
        if nonullglob "$TMPDIR/${bm}_*"; then
            te1; Yi; echo "TRAP: - temporary files removed"
        fi
        exit1
    fi
}

trap 'exit_trap' EXIT
trap 'interrupted INT' INT
trap 'interrupted TERM' TERM
