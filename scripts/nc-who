## SCRIPT SPECIFIC
command=print_help
while (($#));do
    case $1 in
        monitor|last)
            command=nc_$1
            break 2
            ;;
        -h|--help)
            print_help
            ;;
        *)  f;echo "--> unknown option: \"$1\" <--"
            print_help
    esac
done

$command

exit 0

