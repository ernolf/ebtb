__nextcloud_updater__


donate_(){
    . <(require donate)
    donate "https://help.nextcloud.com/t/script-nc-sql-zero-config-commandline-client-for-the-nextcloud-database/195088"
}
for arg in "$@";do [[ "$arg" =~ donate ]] && donate_; done; unset -v arg

help(){
    cat << HELP

    $me [ --raw [ --execute "query;" ] ]

    $me
                open sql cli-client in interactive mode
    --raw, -r   raw output
    --execute,-e "query;"
                run a query and exit

HELP
    exit 0
}

# first search for options --raw, -r, --execute, -e and remove from @() array
# and then add the remaining arguments into the new array
declare raw=false execute=false
args=()
for arg in "$@";do
    if [ "$arg" = "--help" ];then help
    elif [ "$arg" = "-h" ];then help
    elif [ "$arg" = "--raw" ];then raw=true
    elif [ "$arg" = "-r" ];then raw=true
    elif [ "$arg" = "--execute" ];then execute=true
    elif [ "$arg" = "-e" ];then execute=true
    else args+=("$arg")
    fi
done
set -- "${args[@]}"&&unset -v args

if $AIO && command -v psql >/dev/null; then
        DOCKER=false
fi

if $execute; then
    if $raw; then
        db_raw_exec_ "$*"
    else
        db_exec_ "$*"
    fi
else
    if $raw; then
        db_raw_interactive
    else
        db_interactive
    fi
fi

exit0

